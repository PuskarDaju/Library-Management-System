
@using Library_Management_System.Enum
@model IEnumerable<Library_Management_System.Models.User>;
@{
    ViewData["Title"] = "Users";
}

<div class="card-body">
                <div class="overflow-x-auto">
                    <table class="min-w-full bg-white rounded-xl shadow-lg overflow-hidden">
                        <thead  class="bg-[#4f46e5]">
                        <tr>
                
                            <th class="py-3 px-5 text-left text-sm font-semibold uppercase tracking-wider text-white">#</th>
                            <th class="py-3 px-5 text-left text-sm font-semibold uppercase tracking-wider text-white">Name</th>
                            <th class="py-3 px-5 text-left text-sm font-semibold uppercase tracking-wider text-white">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.Any())
                    {
                        var index = 1;
                        foreach (var user in Model)
                        {
                            <tr class="transition duration-200"  id="tableRow">
                                <td class="py-3 px-5 text-sm text-gray-700">@index</td>
                                <td class="py-3 px-5 text-sm text-gray-700">@user.Full_Name</td>
                                <td class="py-3 px-5 text-sm text-gray-700">
                                    <div class="flex items-center gap-2">

                                        @if (@user.Role == UserRoleEnum.Student)
                                        {
                                            <button type="button"
                                                    class="px-3 py-1 bg-green-500 text-white rounded-lg shadow hover:bg-green-600 transition flex items-center gap-1"
                                                    onclick="upgradeUser(@user.Id)">
                                                <i class="bi bi-arrow-up-circle-fill"></i> Upgrade to Admin
                                            </button>
                                        }
                                        else if (@user.Role == UserRoleEnum.Admin)
                                        {
                                            <button type="button"
                                                    class="px-3 py-1 bg-yellow-500 text-white rounded-lg shadow hover:bg-yellow-600 transition flex items-center gap-1"
                                                    onclick="downgradeUser(@user.Id)">
                                                <i class="bi bi-arrow-down-circle-fill"></i> Downgrade to Student
                                            </button>
                                        }

                                        <button type="button"
                                                class="px-3 py-1 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 transition flex items-center gap-1"
                                                onclick="blackListUser(@user.Id)">
                                            <i class="bi bi-slash-circle-fill"></i> Blacklist
                                        </button>

                                    </div>
                                </td>


                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No Categories available.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

@section Scripts{
    <script>
        function blackListUser(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "The user will not be able to login to the system.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, blacklist!'
            }).then((result) => {
                if (result.isConfirmed) {
                    (async () => {
                        const response = await secureFetch(`/api/users/blacklist/${id}`,{
                            method: 'PATCH',
                        },);
                        if (response.ok) {
                            Swal.fire({
                                title: 'Success!',
                                text: "The user has been blacklisted.",
                                icon: 'success'
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: response.message || "The user could not be blacklisted.",
                                icon: 'error'
                            });
                        }
                    })(); // ðŸ‘ˆ This () actually runs the async function
                }
            });
        }

        function upgradeUser(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "The user will be upgraded to Admin.",
                icon: 'info',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, upgrade!'
            }).then((result) => {
                if(result.isConfirmed){
                    (async () => {
                        let response = await secureFetch(`/api/users/upgrade/${id}`,{
                            method:"PATCH",
                        });
                        if(response.ok){
                            Swal.fire({
                                title: 'Success!',
                                text: "The User has been upgraded to Admin.",
                            }).then(() => {
                                window.location.reload();
                            });
                        }else{
                            Swal.fire({
                                title: 'Error!',
                                text: response.message||"The User cannot be upgraded to Admin.",
                            });
                        }
                    })();
                    
                }
            
            });
        }
        function downgradeUser(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "The user will be downgrade to student.",
                icon: 'info',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, downgrade!'
            }).then((result) => {
                if (result.isConfirmed) {
                    (async () => {
                        let response = await secureFetch(`/api/users/downgrade/${id}`, {
                            method: "PATCH",
                        },
                        );
                        if (response.ok) {
                            Swal.fire({
                                title: 'Success!',
                                text: "The User has been downgraded to Student.",
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: response.message || "The User cannot be downgraded to Student.",
                            });
                        }
                    })();

                }
            });
        }
    </script>
}
