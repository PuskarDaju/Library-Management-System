@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var activeMenu = ViewData["ActiveMenu"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" />

</head>
<body>

<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <nav class="bg-dark sidebar">
        <div class="sidebar-header text-center py-4">
            <h4 class="text-white">ðŸ“š Library Admin</h4>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link text-white @(activeMenu == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Book" asp-action="Index" class="nav-link text-white @(activeMenu == "Book" ? "active" : "")">
                    <i class="bi bi-book-half me-2"></i> Books
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Category" asp-action="Index" class="nav-link text-white @(activeMenu == "Category" ? "active" : "")">
                    <i class="bi bi-bookmark-plus me-2"></i> Categories
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="User" asp-action="Index" class="nav-link text-white @(activeMenu == "Users" ? "active" : "")">
                    <i class="bi bi-people-fill me-2"></i> Users
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="IssuedBooks" asp-action="Index" class="nav-link text-white @(activeMenu == "IssuedBooks" ? "active" : "")">
                    <i class="bi bi-journal-check me-2"></i> Issued Books
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Reports" asp-action="Index" class="nav-link text-white @(activeMenu == "Reports" ? "active" : "")">
                    <i class="bi bi-graph-up me-2"></i> Reports
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Settings" asp-action="Index" class="nav-link text-white @(activeMenu == "Settings" ? "active" : "")">
                    <i class="bi bi-gear-fill me-2"></i> Settings
                </a>
            </li>
            <li class="nav-item mt-3">
                <a asp-controller="Account" asp-action="Logout" class="nav-link text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                </a>
            </li>
        </ul>
    </nav>

    <!-- Page content -->
    <div id="page-content-wrapper" class="flex-grow-1">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container-fluid">
                <button class="btn btn-outline-dark" id="menu-toggle"><i class="bi bi-list"></i></button>
                <h5 class="ms-3 my-1">@ViewData["Title"]</h5>
                <div class="ms-auto">
                    <span class="me-3">Welcome, <strong>Admin</strong></span>
                    <img src="~/images/admin-avatar.png" alt="Admin" class="rounded-circle" width="35" height="35" />
                </div>
            </div>
        </nav>

        <main class="container-fluid mt-4">
            @RenderBody()
        </main>

        <footer class="footer bg-light text-center py-3 mt-auto shadow-sm">
            <small>Â© @DateTime.Now.Year Library Management System | Developed by Puskar</small>
        </footer>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById("menu-toggle").addEventListener("click", function () {
        document.getElementById("wrapper").classList.toggle("toggled");
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
